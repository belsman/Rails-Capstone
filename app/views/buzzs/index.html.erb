<div class="d-flex bg-twitter-light-gray">
  <div class="w-75  border-right">
    <%= render 'buzz_nav' %>
    <div id="list-and-buzz" class="p-3">
      <div class="card px-2">
        <%= render 'buzz_form' %>
      </div>
      <br>

      <ul class="buzzs bg-white m-0 p-0">
        <%= render @timeline_buzzs %>
      </ul>
    </div>
  </div>
  <div class="w-25 ml-1">
    <div class="d-flex border-bottom p-2 mb-3">
      <span class="h6 text-secondary">WHO TO FOLLOW</span>
    </div>

    <ul class="bg-white m-0 p-0">
      <%= render :partial => "who_to_follow", :collection => @who_to_follow, as: :follow %>
    </ul>

  </div>
</div>