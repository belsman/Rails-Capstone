<div class="d-flex bg-twitter-light-gray">
  <div class="w-75  border-right">
    <div class="cover-image-container">
        <% if @user.cover_image.attached? %>
          <%= image_tag @user.cover_image, class: "cover-img" %>
        <% else %>
          <%= image_tag "cover.jpg", class: "cover-img" %>
        <% end %>
    </div>
    <%= render 'buzzs/buzz_nav' %>
    <div id="list-and-buzz" class="p-3">
      <div class="card px-2">
        <%= render 'buzzs/buzz_form' %>
      </div>
      <br>

      <ul class="buzzs bg-white m-0 p-0">
        <%= render :partial => "buzzs/buzz", :collection => @user_buzzs %>
      </ul>
    </div>
  </div>
  <div class="w-25 ml-1">
    <%= render 'user_profile' %>
  </div>
</div>